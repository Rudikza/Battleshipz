%nav.top-bar
  %ul.title-area
    %li.name
      %h1= link_to "BattleShipZ", root_path
  %section.top-bar-section
    %ul.right
      %li.divider
      - if user_signed_in?
        %li= link_to current_user.email, "#"
        %li= link_to "Edit", edit_user_registration_path
        %li= link_to "Logout", destroy_user_session_path, method: :delete
      - else
        %li= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-large btn-session"
        %li= link_to "Sign In", new_user_session_path, class: "btn btn-primary btn-large btn-session"
      %li.divider